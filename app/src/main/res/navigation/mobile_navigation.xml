<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_feed">

    <fragment
        android:id="@+id/navigation_post"
        android:name="com.example.thodea.ui.post.PostFragment"
        android:label="@string/post"
        tools:layout="@layout/fragment_post" />

    <fragment
        android:id="@+id/navigation_feed"
        android:name="com.example.thodea.ui.feed.FeedFragment"
        android:label="@string/feed"
        tools:layout="@layout/fragment_feed" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.thodea.ui.search.SearchFragment"
        android:label="@string/search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.thodea.ui.search.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_search" />

</navigation>